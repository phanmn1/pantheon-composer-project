{{ attach_library('core/drupal.dialog.ajax') }}
{{ attach_library('streamnet_upload/sn_link') }}
{% set modal_upload = path('streamnet_upload.modal_upload_esc') %}

<h1>{{ title }}</h1>

<table>
    <thead>
        <tr>
            <th>Datasets</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Escapement</td>
             <td><a href="https://snq.streamnet.org/" target = "_blank">View in Streamnet</a></td>
            <td> <a href={{ modal_upload }} class="btn btn-lg btn-default highlight_black stylish use-ajax">Upload</a></td>
        </tr>
    </tbody>
</table>

<div class="last-updated-table">
    <h1>Last Updated</h1><br>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Date Updated</th>
                <th>Trends</th>
                <th>Download Link</th>
            </tr>
            {% for item in data %}
            <tr>
                <td>{{ item.Username }}</td>
                <td>{{ item.DateUpdated }}</td>
                <td>{{ item.Escapement | raw }}</td>
                <td><a href='/sites/default/files/ESCFiles/{{ item.FileName }}' download>Uploaded File</a></td>
            </tr>
            {% endfor %}
        </thead>
    </table>
</div>